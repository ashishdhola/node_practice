<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit User</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen flex items-center justify-center">

  <div class="bg-white shadow-lg rounded-lg p-6 max-w-md w-full">
    <a href="/user" class="text-blue-500 text-sm mb-4 inline-block hover:underline">
      &larr; Back to User List
    </a>
    <h2 class="text-2xl font-semibold text-center text-gray-800 mb-6">
      Edit User
    </h2>
    <form method="post" action="/user/updateUser/<%= user.id %>">
      <div class="space-y-4">
        <!-- Firstname -->
        <div>
          <label for="fname" class="block text-sm font-medium text-gray-600">
            Firstname
          </label>
          <input type="text" id="fname" name="fname" value="<%= user.fname %>" 
                 class="mt-1 block w-full px-4 py-2 border rounded-lg text-gray-700 
                 focus:ring-blue-500 focus:border-blue-500 border-gray-300" required>
        </div>

        <!-- Lastname -->
        <div>
          <label for="lname" class="block text-sm font-medium text-gray-600">
            Lastname
          </label>
          <input type="text" id="lname" name="lname" value="<%= user.lname %>" 
                 class="mt-1 block w-full px-4 py-2 border rounded-lg text-gray-700 
                 focus:ring-blue-500 focus:border-blue-500 border-gray-300" required>
        </div>

        <!-- Email -->
        <div>
          <label for="email" class="block text-sm font-medium text-gray-600">
            Email
          </label>
          <input type="email" id="email" name="email" value="<%= user.email %>" 
                 class="mt-1 block w-full px-4 py-2 border rounded-lg text-gray-700 
                 focus:ring-blue-500 focus:border-blue-500 border-gray-300" required>
        </div>

        <!-- Phone -->
        <div>
          <label for="phoneNo" class="block text-sm font-medium text-gray-600">
            Phone
          </label>
          <input type="number" id="phoneNo" name="phoneNo" value="<%= user.phoneNo %>" 
                 class="mt-1 block w-full px-4 py-2 border rounded-lg text-gray-700 
                 focus:ring-blue-500 focus:border-blue-500 border-gray-300" required>
        </div>

        <!-- Submit Button -->
        <div>
          <button type="submit" 
                  class="w-full bg-blue-600 text-white font-medium px-4 py-2 rounded-lg 
                  hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 
                  focus:ring-offset-2">
            Update User
          </button>
        </div>
      </div>
    </form>
  </div>
</body>
</html>
