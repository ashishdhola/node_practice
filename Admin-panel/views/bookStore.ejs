<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Book Store</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100">
  <!-- Header -->
  <header class="bg-gradient-to-r from-purple-700 to-indigo-600 text-white py-5 shadow-lg">
    <div class="container mx-auto flex justify-between items-center px-6">
      <h1 class="text-4xl font-extrabold">ðŸ“š Book Store</h1>
      <nav>
        <a href="/" class="text-lg font-medium hover:underline">Home</a>
      </nav>
    </div>
  </header>

  <!-- Main Section -->
  <main class="py-12 bg-gray-50">
    <div class="container mx-auto px-6">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Form Section -->
        <section class="bg-white rounded-xl shadow-xl p-8">
          <h2 class="text-3xl font-bold text-indigo-800 text-center mb-6">Add a New Book</h2>
          <form id="book-form" method="post" action="/books/addBook" class="space-y-6">
            <div>
              <label for="book-name" class="text-lg font-semibold text-gray-700">Book Name</label>
              <input type="text" id="book-name" name="bookName" placeholder="Enter book name"
                class="mt-2 w-full border border-gray-300 rounded-lg p-3 focus:ring-2 focus:ring-purple-500">
            </div>

            <div>
              <label for="book-title" class="text-lg font-semibold text-gray-700">Book Title</label>
              <input type="text" id="book-title" name="bookTitle" placeholder="Enter book title"
                class="mt-2 w-full border border-gray-300 rounded-lg p-3 focus:ring-2 focus:ring-purple-500">
            </div>

            <div>
              <label for="author-name" class="text-lg font-semibold text-gray-700">Author Name</label>
              <input type="text" id="author-name" name="authorName" placeholder="Enter author name"
                class="mt-2 w-full border border-gray-300 rounded-lg p-3 focus:ring-2 focus:ring-purple-500">
            </div>

            <div>
              <label for="publish-date" class="text-lg font-semibold text-gray-700">Publish Date</label>
              <input type="date" id="publish-date" name="publishDate"
                class="mt-2 w-full border border-gray-300 rounded-lg p-3 focus:ring-2 focus:ring-purple-500">
            </div>

            <div>
              <label for="book-price" class="text-lg font-semibold text-gray-700">Price (in INR)</label>
              <input type="number" id="book-price" name="bookPrice" placeholder="Enter price"
                class="mt-2 w-full border border-gray-300 rounded-lg p-3 focus:ring-2 focus:ring-purple-500">
            </div>

            <div>
              <label for="book-pages" class="text-lg font-semibold text-gray-700">Pages</label>
              <input type="number" id="book-pages" name="bookPages" placeholder="Enter pages"
                class="mt-2 w-full border border-gray-300 rounded-lg p-3 focus:ring-2 focus:ring-purple-500">
            </div>

            <div>
              <label for="book-image" class="text-lg font-semibold text-gray-700">Book Image URL</label>
              <input type="url" id="book-image" name="bookImage" placeholder="Enter image URL"
                class="mt-2 w-full border border-gray-300 rounded-lg p-3 focus:ring-2 focus:ring-purple-500">
            </div>

            <button type="submit"
              class="w-full bg-gradient-to-r from-purple-600 to-indigo-500 text-white py-3 rounded-lg text-lg font-bold hover:from-purple-700 hover:to-indigo-600 transition">
              Add Book
            </button>
          </form>
        </section>

        <!-- Books Section -->
        <section>
          <h2 class="text-3xl font-bold text-indigo-800 mb-6">Available Books</h2>
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-2 gap-8">
            <% getBooks.map((book) => { %>
            <div class="bg-white rounded-lg shadow-lg hover:shadow-2xl transition-transform transform hover:-translate-y-1 overflow-hidden">
              <img src="<%= book.bookImage %>" alt="Book Cover" class="w-full h-[250px] object-cover">
              <div class="p-6">
                <h3 class="text-xl font-bold text-indigo-800 truncate"><%= book.bookName %></h3>
                <p class="text-gray-500 text-sm mt-1">Author: <span class="font-medium"><%= book.authorName %></span></p>
                <p class="text-gray-500 text-sm">Published: <%= book.publishDate %></p>
                <p class="text-gray-500 text-sm">Pages: <%= book.bookPages %></p>
                <div class="flex justify-between items-center mt-4">
                  <span class="text-lg font-semibold text-purple-600">â‚¹<%= book.bookPrice %></span>
                  <div>
                    <a href="/books/editBook/<%= book.id %>"
                      class="text-indigo-500 hover:text-indigo-700 text-sm font-medium mr-3">Edit</a>
                    <a href="/books/deleteBook/<%= book.id %>"
                      class="text-red-500 hover:text-red-700 text-sm font-medium">Delete</a>
                  </div>
                </div>
              </div>
            </div>
            <% }) %>
          </div>
        </section>
      </div>
    </div>
  </main>
</body>

</html>
